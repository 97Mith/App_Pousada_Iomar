                        Grid.Row="1"
                        Margin="5"
                        Text="Andaime Proj Loc e Mont LTDA"
                        FontSize="12"
                        TextColor="#B3B3B3"
                        VerticalOptions="Start"/>

                    <!-- Coluna 2, Linha 1: Número de Telefone -->
